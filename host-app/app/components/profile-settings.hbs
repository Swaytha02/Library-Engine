<section class="profile-settings-container">
  <h2>Profile Settings</h2>

  <form {{on "submit" this.saveProfile}}>
    <div class="form-group">
      <label for="name">Name</label>
      <input id="name" type="text" value={{this.name}} {{on "input" this.updateName}} />
    </div>

    <div class="form-group">
      <label for="email">Email</label>
      <input id="email" type="email" value={{this.email}} {{on "input" this.updateEmail}} />
    </div>

    <button type="submit" class="save-button">Save Changes</button>
  </form>
</section>